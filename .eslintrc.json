{
  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "jest": true,
    "jquery": true,
    "node": true
  },

  "extends": ["prettier", "plugin:react/recommended"],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "plugins": ["prettier", "react"],

  "rules": {
    "no-undef": "error",
    "no-unused-vars": "error",
    "prettier/prettier": "error",
    "react/prop-types": 0
  }
}
